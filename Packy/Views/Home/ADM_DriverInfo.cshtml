        // Assuming you have a JavaScript function to populate the driver's orders in the table
        function populateOrdersTable(orders) {
            var tableBody = document.getElementById('ordersTableBody');
            // Clear any existing rows
            tableBody.innerHTML = '';
            // Loop through the orders and create table rows
            orders.forEach(function (order) {
                var row = `<tr>
                                               <td>${order.awb}</td>
                                               <td>${order.sender}</td>
                                               <td>${order.receiver}</td>
                                           </tr>`;
                tableBody.innerHTML += row;
            });
        }
    </script>
}