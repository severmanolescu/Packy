@{
    ViewData["Title"] = "View Order";
}

<h1 style="text-align: center;">@ViewData["Title"]</h1>

<div style="max-width: 600px; margin: auto; padding: 20px; margin-bottom: 60px;">

    <!-- Order AWB -->
    <div style="margin-bottom: 15px;">
        <label for="awb" style="display: block; margin-bottom: 5px;">Order AWB:</label>
        <input type="text" id="awb" name="awb" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px;" required>
    </div>

    <!-- Search Button -->
    <button onclick="viewOrder()" class="signup-submit" type="button">View Order</button>

    <div style="margin-bottom: 15px;">
        <label for="error" style="display: block; margin-bottom: 5px; color: red;" id="error"></label>
    </div>

    <div style="margin-bottom: 15px;">
        <label for="receiverName" style="display: block; margin-bottom: 5px;">Receiver Name:</label>
        <div style="padding: 10px; border: 1px solid #ccc; border-radius: 4px;">
            <div id="receiverName" name="receiverName" contenteditable="false" style="width: 100%; border: none;" required>[Receiver Name]</div>
        </div>
    </div>

    <div style="margin-bottom: 15px;">
        <label for="county" style="display: block; margin-bottom: 5px;">County/Region:</label>
        <div style="padding: 10px; border: 1px solid #ccc; border-radius: 4px;">
            <div id="county" name="county" contenteditable="false" style="width: 100%; border: none;" required>[County/Region]</div>
        </div>
    </div>

    <div style="margin-bottom: 15px;">
        <label for="zipCode" style="display: block; margin-bottom: 5px;">Zip Code:</label>
        <div style="padding: 10px; border: 1px solid #ccc; border-radius: 4px;">
            <div id="zipCode" name="zipCode" contenteditable="false" style="width: 100%; border: none;" required>[Zip Code]</div>
        </div>
    </div>

    <div style="margin-bottom: 15px;">
        <label for="address" style="display: block; margin-bottom: 5px;">Street, Building, Floor, Apt Number:</label>
        <div style="padding: 10px; border: 1px solid #ccc; border-radius: 4px;">
            <div id="address" name="address" contenteditable="false" style="width: 100%; border: none;" required>[Street, Building, Floor, Apt Number]</div>
        </div>
    </div>

    <div style="margin-bottom: 15px;">
        <label for="phone" style="display: block; margin-bottom: 5px;">Phone</label>
        <div style="padding: 10px; border: 1px solid #ccc; border-radius: 4px;">
            <div id="phone" name="phone" contenteditable="false" style="width: 100%; border: none;" required>[Phone]</div>
        </div>
    </div>

    <div style="margin-bottom: 15px;">
        <label for="height" style="display: block; margin-bottom: 5px;">Height</label>
        <div style="padding: 10px; border: 1px solid #ccc; border-radius: 4px;">
            <div id="height" name="height" contenteditable="false" style="width: 100%; border: none;" required>[Height]</div>
        </div>
    </div>

    <div style="margin-bottom: 15px;">
        <label for="width" style="display: block; margin-bottom: 5px;">Width</label>
        <div style="padding: 10px; border: 1px solid #ccc; border-radius: 4px;">
            <div id="width" name="width" contenteditable="false" style="width: 100%; border: none;" required>[Width]</div>
        </div>
    </div>

    <div style="margin-bottom: 15px;">
        <label for="length" style="display: block; margin-bottom: 5px;">Length</label>
        <div style="padding: 10px; border: 1px solid #ccc; border-radius: 4px;">
            <div id="length" name="length" contenteditable="false" style="width: 100%; border: none;" required>[Length]</div>
        </div>
    </div>

    <div style="margin-bottom: 15px;">
        <label for="weight" style="display: block; margin-bottom: 5px;">Weight:</label>
        <div style="padding: 10px; border: 1px solid #ccc; border-radius: 4px;">
            <div id="weight" name="weight" contenteditable="false" style="width: 100%; border: none;" required>[Weight]</div>
        </div>
    </div>

    <div style="margin-bottom: 15px;">
        <label for="price" style="display: block; margin-bottom: 5px;">Price</label>
        <div style="padding: 10px; border: 1px solid #ccc; border-radius: 4px;">
            <div id="price" name="price" contenteditable="false" style="width: 100%; border: none;" required>[Price]</div>
        </div>
    </div>

    <div style="margin-bottom: 15px;">
        <label for="fragile" style="display: block; margin-bottom: 5px;">Fragile:</label>
        <div style="padding: 10px; border: 1px solid #ccc; border-radius: 4px;">
            <div id="fragile" name="fragile" contenteditable="false" style="border: none;">
                <input type="radio" id="fragileYes" name="fragile" value="Yes" disabled>
                <label for="fragileYes" style="margin-right: 10px;">Yes</label>
                <input type="radio" id="fragileNo" name="fragile" value="No" checked disabled>
                <label for="fragileNo">No</label>
            </div>
        </div>
    </div>

    <div style="margin-bottom: 15px;">
        <label for="observations" style="display: block; margin-bottom: 5px;">Observations:</label>
        <div style="padding: 10px; border: 1px solid #ccc; border-radius: 4px;">
            <div id="observations" name="observations" contenteditable="false" style="width: 100%; border: none;" placeholder="Any additional details about the order">[Observations]</div>
        </div>
    </div>

</div>