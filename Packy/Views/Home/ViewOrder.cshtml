@{
    ViewData["Title"] = "View Order";
}

<h1 style="text-align: center;">@ViewData["Title"]</h1>

<div style="max-width: 600px; margin: auto; padding: 20px; margin-bottom: 60px;">

    <!-- Order AWB -->
    <div style="margin-bottom: 15px;">
        <label for="awb" style="display: block; margin-bottom: 5px;">Order AWB:</label>
        <input type="text" id="awb" name="awb" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px;" required>
    </div>

    <!-- Search Button -->
    <div style="text-align: center; margin-bottom: 15px;">
        <button onclick="searchAWB()" type="button" style="padding: 10px 20px; background-color: #4CAF50; color: white; border: none; border-radius: 4px; cursor: pointer; width: 50%; max-width: 200px;">Search AWB</button>
    </div>

    <!-- Display for Expeditor Name -->
    <div style="margin-bottom: 15px;">
        <label style="display: block; margin-bottom: 5px;">Expeditor Name:</label>
        <div style="padding: 10px; border: 1px solid #ccc; border-radius: 4px;">[Expeditor Name]</div>
    </div>

    <!-- Display for Person or Firm -->
    <div style="margin-bottom: 15px;">
        <label style="display: block; margin-bottom: 5px;">Person or Firm:</label>
        <div style="padding: 10px; border: 1px solid #ccc; border-radius: 4px;">[Person or Firm]</div>
    </div>

    <!-- Display for Name (Recipient or Firm) -->
    <div style="margin-bottom: 15px;">
        <label style="display: block; margin-bottom: 5px;">Name:</label>
        <div style="padding: 10px; border: 1px solid #ccc; border-radius: 4px;">[Name]</div>
    </div>

    <div style="margin-bottom: 15px;">
        <label style="display: block; margin-bottom: 5px;">County/Region:</label>
        <div style="padding: 10px; border: 1px solid #ccc; border-radius: 4px;">[County/Region]</div>
    </div>

    <!-- Display for Zip Code -->
    <div style="margin-bottom: 15px;">
        <label style="display: block; margin-bottom: 5px;">Zip Code:</label>
        <div style="padding: 10px; border: 1px solid #ccc; border-radius: 4px;">[Zip Code]</div>
    </div>

    <!-- Display for Street, Building, Floor, Apt Number -->
    <div style="margin-bottom: 15px;">
        <label style="display: block; margin-bottom: 5px;">Street, Building, Floor, Apt Number:</label>
        <div style="padding: 10px; border: 1px solid #ccc; border-radius: 4px;">[Street, Building, Floor, Apt Number]</div>
    </div>

    <!-- Display for Order Status -->
    <div style="margin-bottom: 15px;">
        <label style="display: block; margin-bottom: 5px;">Order Status:</label>
        <div style="padding: 10px; border: 1px solid #ccc; border-radius: 4px;">[Order Status]</div>
    </div>

    <!-- Display for Order Weight -->
    <div style="margin-bottom: 15px;">
        <label style="display: block; margin-bottom: 5px;">Order Weight:</label>
        <div style="padding: 10px; border: 1px solid #ccc; border-radius: 4px;">[Order Weight]</div>
    </div>

    <!-- Display for Fragile Option -->
    <div style="margin-bottom: 15px;">
        <label style="display: block; margin-bottom: 5px;">Fragile:</label>
        <div>
            <input type="radio" id="fragileYes" name="fragile" value="Yes" disabled>
            <label for="fragileYes" style="margin-right: 10px;">Yes</label>
            <input type="radio" id="fragileNo" name="fragile" value="No" checked disabled>
            <label for="fragileNo">No</label>
        </div>
    </div>

    <!-- Display for Observations -->
    <div style="margin-bottom: 15px;">
        <label style="display: block; margin-bottom: 5px;">Observations:</label>
        <div style="padding: 10px; border: 1px solid #ccc; border-radius: 4px;">[Observations]</div>
    </div>

</div>
